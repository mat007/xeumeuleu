<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:components>
    <map:actions>
      <map:action logger="sitemap.action.sourcetype" name="sourcetype" src="org.apache.forrest.sourcetype.SourceTypeAction">
        <sourcetype name="hello-v1.0">
          <document-declaration public-id="-//Acme//DTD Hello Document V1.0//EN" />
        </sourcetype>
      </map:action>
    </map:actions>

    <map:selectors default="parameter">
	    <map:selector logger="sitemap.selector.parameter" name="parameter" src="org.apache.cocoon.selection.ParameterSelector" />
    </map:selectors>

    <map:generators default="file">
      <map:generator name="html" src="org.apache.cocoon.generation.HTMLGenerator">
        <jtidy-config>classes/jtidy.properties</jtidy-config>
      </map:generator>
    </map:generators>

  </map:components>

  <map:resources>
    <map:resource name="transform-to-document">
      <map:act type="sourcetype" src="{src}">
        <map:select type="parameter">
          <map:parameter name="parameter-selector-test" value="{sourcetype}" />
        </map:select>
      </map:act>
    </map:resource>
  </map:resources>

 <map:pipelines>
  <map:pipeline>

    <map:match pattern="reference/**.xml">
      <map:generate type="html" src="{lm:{0}}" />
      <map:transform src="{forrest:forrest.stylesheets}/html-to-document.xsl" />
      <map:serialize type="xml"/>
    </map:match>

    <map:match pattern="reference/**.png">
      <map:read src="{lm:{0}}" mime-type="image/png"/>
    </map:match>

    <map:match pattern="reference/**.css">
      <map:read src="{lm:{0}}"/>
    </map:match>

    <map:match pattern="reports/*_test.xml">
      <map:generate src="{lm:{0}}"/>
      <map:transform src="{properties:resources.stylesheets}/boost.test.xsl"/>
      <map:transform src="{forrest:forrest.stylesheets}/html-to-document.xsl"/>
      <map:serialize type="xml"/>
    </map:match>

    <map:match pattern="reports/*-cpd.xml">
      <map:generate src="{lm:{0}}"/>
      <map:transform src="{properties:resources.stylesheets}/cpd.xsl"/>
      <map:transform src="{forrest:forrest.stylesheets}/html-to-document.xsl"/>
      <map:serialize type="xml"/>
    </map:match>

    <map:match pattern="reports/*-cppncss.xml">
      <map:generate src="{lm:{0}}"/>
      <map:transform src="{properties:resources.stylesheets}/cppncss.xsl"/>
      <map:transform src="{forrest:forrest.stylesheets}/html-to-document.xsl"/>
      <map:serialize type="xml"/>
    </map:match>

    <map:match pattern="**.xml">
      <map:call resource="transform-to-document">
        <map:parameter name="src" value="{properties:content.xdocs}{1}.xml" />
      </map:call>
    </map:match>

  </map:pipeline>
 </map:pipelines>
</map:sitemap>
